{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es2016",
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "src/components/form/*",
    "src/components/search/*"
  ],
  "include": ["src"]
}
